{% extends 'AppBundle:Default:index.html.twig' %}
{% block body %}
    {% include "AppBundle:Parts:flashbag.html.twig" %}
    <div class="jumbotron text-center iso-jumbo">
        <h1>Navigo :</h1>
        <p>Vous vous trouvez actuellement sur L'interface Navigo.</p>
        <p>Si vous êtes déjà inscrit, veuillez vous connecter :
        <p><a class="btn btn-primary btn-lg" target="_blank" href="{{ path("security_login") }}"
              role="button">Connexion</a></p>
    </div>
    <div class="container" style="margin-top: 20px;">
        <div class="col-md-8 col-center-block">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {{ form_label(form.card) }}
            {{ form_widget(form.card) }}
            {{ form_errors(form.card) }}
            <div class="form-group">
                <button type="submit" class="btn btn-default">S'inscrire</button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}